<!DOCTYPE html>
<html>
<head>
    <%- include partials/header.ejs %>
    <title>Settings</title>
</head>
<body style="background-color: #ffffff">
<nav class="navbar sticky-top navbar-light shadow" style="background-color: #3700B3;">
    <form method="post" action="/signout/" name="signoutForm">
        <a class="navbar-brand" style="color: #ffffff" href="#" onclick="document.signoutForm.submit()">Logout</a>
    </form>
    <form method="post" action="/main/" name="mainForm">
        <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
            <li class="nav-item">
                <a class="nav-link" href="#"><i class="fa fa-backward" style="color: #ffffff" onclick="document.mainForm.submit()"></i></a>
            </li>
        </ul>
    </form>
</nav>
<div class="text-center">
    <h1>Add Widgets:</h1>
    <div class="btn-group btn-group-lg" role="group">
        <a href="#"><button type="button" class="btn btn-link"><img src="/weather-icon.png" width="30" height="30"></button></a>
        <a href="#"><button type="button" class="btn btn-link"><img src="/youtube-icon.png" width="30" height="30"></button></a>
        <a href="#"><button type="button" class="btn btn-link"><img src="/reddit-icon.png" width="30" height="30"></button></a>
        <a href="#"><button type="button" class="btn btn-link"><img src="/steam-icon.png" width="30" height="30"></button></a>
    </div>
</div>
<hr>
<h1 class="text-center">Settings Your Widgets:</h1>
<div class="card-columns m-3">
    <%- include("partials/settingWeather.ejs", {settings: widget.meteo}) %>
    <%- include("partials/settingSteam.ejs", {settings: widget.steam}) %>
    <%- include("partials/settingViews.ejs", {settings: widget.ytViews}) %>
    <%- include("partials/settingSubscribers.ejs", {settings: widget.ytSub}) %>
    <%- include("partials/settingLastComments.ejs", {settings: widget.ytLast}) %>
    <%- include("partials/settingReddit.ejs", {settings: widget.reddit}) %>
</div>
</body>
</html>